}

<!-- END TOPBAR -->
<input type="hidden" value="@Model.Item" name="uid" id="uid" />
<!-- MAIN NAVIGATION -->
<!-- END MAIN NAVIGATION -->
<!-- END NAVBAR -->
<!-- BREADCRUMBS -->
<div class="page-header">
    <div class="container">
        <h1 class="page-title pull-left">Job Profile</h1>
        <ol class="breadcrumb">
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/search/jobs">Jobs Search</a>
